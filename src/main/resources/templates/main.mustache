            <tr>
                <div class="row">
                    <td><form method="post">
                        <p style="text-align: center"><button name="idregion" value="{{idregion}}" type="submit">{{idregion}}</button>
                    </form>
                    </td>
                    <td>
                        {{name}}
                    </td>
                </div>
            </tr>

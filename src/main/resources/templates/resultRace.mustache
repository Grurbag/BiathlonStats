<html>
<head>
    <meta charset="utf-8" />
    <link rel="stylesheet" type="text/css" href="styles/css/style.css" >
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
</head>
<body>
<div class="row">
    <a class="buttonBox col-md" href="/institutionsRedirect"><h2 class="buttonTitle">Спорткомплексы</h2></a>
    <a class="buttonBox col-md" href="/racesRedirect"><h2 class="buttonTitle">Соревнования</h2></a>
    <a class="buttonBox col-md" href="/regionsRedirect"><h2 class="buttonTitle">Регионы</h2></a>
    <a class="buttonBox col-md" href="/coachesRedirect"><h2 class="buttonTitle">Тренеры</h2></a>
    <a class="buttonBox col-md" href="/sportsmansRedirect"><h2 class="buttonTitle">Спортсмены</h2></a>
    <a class="buttonBox col-md" href="/mainRedirect"><h2 class="buttonTitle">Главная</h2></a>
    <a href="/registrationRedirect" ><img
            alt=""
            class="mask  col-md"

            src="https://static.overlay-tech.com/assets/8d69822d-f599-4e0a-9a18-48e1afc7a1a0.svg"
    /></a>
</div>

<div class="frame-8">
    <div class="input">
        <div class="button-two">
            <a href="/predictResult" class="button">Предсказать результат</a>
        </div>
    </div>
</div>
<div>
    <form method="post" action = "/addSportsman">
        <select class="js-select2" name="idaddedsportsman">
            {{#sportsmanadd}}
                <option value={{idsportsman}}>{{idsportsman}} {{name}} {{surname}}</option>
            {{/sportsmanadd}}
        </select>
        <button type="submit">Добавить спортсмена</button>
    </form>
</div>
<table class="iksweb">
    <tbody>
    <tr>
        <td>Код</td>
        <td>Фио</td>
        <td>Пол</td>
        <td>Дата рождения</td>
        <td></td>
    </tr>
    {{#sportsman}}
        <tr>
            <div class="row">
                <td>
                    <a >{{idsportsman}}</a>
                </td>
                <td><form method="post">
                    <p style="text-align: center"><button name="idsportsman" value="{{idsportsman}}" type="submit">{{name}} {{surname}}</button>
                </form>
                </td>
                <td>
                    {{sex}}
                </td>
                <td>
                    {{birthdate}}
                </td>
                <td>
                    <form method="post" action = "/deleteSportsman">
                        <p style="text-align: center"><button name="idremovedsportsman" value="{{idsportsman}}" type="submit">Удалить</button>
                    </form>
                </td>
            </div>
        </tr>
    {{/sportsman}}
    </tbody>
</table>

</body>
</html>
